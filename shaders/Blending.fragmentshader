#version 330 core

// Interpolated values from the vertex shaders
in vec2 UV;

// Ouput data
out vec4 color;

// Values that stay constant for the whole mesh.
uniform sampler2D texture1;
void main(){

	// Output color = color of the texture at the specified UV
	 vec4 texColor = texture(texture1, UV);
   
	if(texColor.a <0.1)
      discard;
    color = texColor;
}
